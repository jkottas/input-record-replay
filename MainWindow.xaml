<Window x:Class="InputRecordReplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputRecordReplay"
        mc:Ignorable="d"
        Opacity="0.5"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None" SizeToContent="WidthAndHeight"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel, IsDesignTimeCreatable=true}">
    <Border CornerRadius="15" BorderBrush="White" BorderThickness="5" Background="White" >
        <Grid Background="White">
            <StackPanel>
                <Grid Margin="2">
                    <TextBlock Text="Input Recorder" Background="DarkGray" Margin="0,2,0,0"/>
                    <Button Margin="1" HorizontalAlignment="Right" Command="{Binding SettingsButtonClick}">
                        <Button.Template>
                            <ControlTemplate>
                                <ContentControl x:Name="SettingsIcon" Content="{StaticResource SettingsIcon}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Record" Content="{Binding RecordButtonText}" Command="{Binding RecordButtonClick}" Margin="10" Width="100" Height="25">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Playback" Content="{Binding PlaybackButtonText}" Command="{Binding PlaybackButtonClick}" Margin="10" Width="100" Height="25">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
